@import '../template/template.wxss';
.order {
  width: 100%;
  background-color: #f5f5f5;
}

/* title */
.order .order-title {
  width: 100%;
  height: 98rpx;
  box-shadow: inset 0px -1px 0px 0px #ededed;
  background-color: #fff;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-around;
  align-items: center;
  color: #999;
}
.order-title .order-type {
  box-sizing: border-box;
  line-height: 97rpx;
  padding: 0 10rpx;
}
.orderEach {
  margin-bottom: 0rpx;
}
/* 无记录 */
.no-record {
  position: absolute;
  left: 0;
  top: 98rpx;
  right: 0;
  bottom: 0;
  z-index: 1;
}
.no-record .record-content {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #fff;
  text-align: center;
}
.record-img {
  width: 191rpx;
	height: 144rpx;
  margin: 0 auto;
  padding-top: 146rpx;
  padding-bottom: 44rpx;
}
.record-text {
  width: 100%;
  text-align: center;
  color: #999;
  padding-bottom: 90rpx;
}
.record-btn {
  width: 524rpx;
	height: 88rpx;
	line-height: 88rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 32rpx;
}

.select-btn {
  color: #fd3c4f;
  border-bottom: 1rpx solid #fd3c4f;
}
.default-red {
  color: #fd3c4f;
}
.color-border {
  color: #fd3c4f;
  border: solid 1rpx #fd3c4f;
  border-radius: 10rpx;
}
.color-orange {
  color: #ff902f;
}
.color-red {
  color: #e82a3d;
}
.color-blue {
  color: #2891e0;
}
.color-green {
  color: #25c871;
}
.list-status {
  width: 100%;
  padding: 10rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
  background-color: #fff
}