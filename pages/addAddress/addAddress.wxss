.addAddress {
  width: 100%;
  height: 100%;
}
/* title */
.addAddress .order-title {
  width: 100%;
  height: 98rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  box-shadow: inset 0px -1px 0px 0px #ededed;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  color: #999;
  background-color: #fff;
}
.order-title .order-type {
  width: 100rpx;
  margin-right: 60rpx;
  line-height: 97rpx;
  text-align: center;
  box-sizing: border-box;
  font-size: 30rpx;
}
/* container */
.address-container {
  width: 100%;
  padding: 30rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: column nowrap;
}
.address-container .item {
  width: 100%;
  height: 72rpx;
  margin-top: 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
}
.item .name {
  width: 172rpx;
  line-height: 72rpx;
  flex-shrink: 0;
}
.item .receiver, .item .address-select {
  /* flex: 1; */
  width: 520rpx;
  height: 72rpx;
  padding-left: 24rpx;
  box-sizing: border-box;
  border: 1rpx solid #ccc;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: relative;
}
.address-select .address-text {
  /* width: 100%; */
  flex: 1;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.address-select .address-select-btn {
  flex-shrink: 0;
  width: 78rpx;
	height: 69rpx;
	line-height: 69rpx;
  text-align: center;
	background-color: #f5f5f5;
}
.address-select-btn .select-icon {
  width: 20rpx;
	height: 12rpx;
}
.address-select .address-list {
  position: absolute;
  top: 80rpx;
  right: -1rpx;
  box-sizing: border-box;
  color: #999;
  background-color: #fff;
	border: 1rpx solid #cccccc;
  z-index: 99;
}
.address-list .list-title {
  width: 528rpx;
	height: 80rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-bottom: 1rpx solid #cccccc;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}
.list-title .select-size {
  color: #333;
}
.list-title .title-item {
  padding: 0 40rpx
}
.address-list .list-contain {
  width: 100%;
  display: flex;
  flex-flow: row wrap;
  padding: 20rpx 0;
}
.list-contain .list-item {
  padding: 15rpx 20rpx;
}
/* button */
.addAddress .confirm {
  width: 680rpx;
	height: 96rpx;
	line-height: 96rpx;
  margin: 110rpx auto 0;
  text-align: center;
	background-color: #fd3c4f;
	border-radius: 10rpx;
  color: #fff;
  font-size: 36rpx;
}