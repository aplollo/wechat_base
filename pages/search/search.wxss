.search {
  width: 100%;
}
/* searchbar */
.searchBar {
  width: 100%;
  height: 70rpx;
  padding: 30rpx 24rpx;
  /* margin-top: 15rpx; */
  box-sizing: border-box;
  font-size: 24rpx;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 99;
  background-color: #fff;
}
.searchBar .searchBox {
  flex:1;
  height: 54rpx;
  box-sizing: border-box;
	border-radius: 32rpx;
	background-color: #f5f5f5;
  display: flex;
  align-items: center;
}
.searchBar .searchImg {
  margin-left: 24rpx;
  margin-right: 14rpx;
  width: 30rpx;
  height: 30rpx;
}
.searchBox .searchInput{
  flex: 1;
  
}
.searchBox .deleteImg {
  margin-left: 14rpx;
  margin-right: 24rpx;
  width: 30rpx;
  height: 30rpx;
}
.search .searchButton {
  width: 90rpx;
  height: 54rpx;
  line-height: 54rpx;
  margin-left: 24rpx;
  border-radius: 8rpx;
  text-align: center;
  color: #fff;
  background-color: #fd3c4f;
}

/* 商品列表 */
.showList {
  width: 100%;
  margin-top: 60rpx;
  background-color: #fff;
}
.showList .list-item {
  width: 100%;
  height: 312rpx;
  box-sizing: border-box;
  padding: 40rpx 24rpx 40rpx 277rpx;
  border-bottom: 1rpx solid #ededed;
  position: relative;
}
.list-item .productImg {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 232rpx;
	height: 232rpx;
}
.list-item .detail {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
}
.detail .detail-main {
  width: 100%;
}
.detail-main .supply {
  display: inline-block;
  /* width: 68rpx; */
	height: 34rpx;
	line-height: 34rpx;
  margin-right: 22rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
	background-color: #fd3c4f;
  vertical-align: middle;
}
.detail-main .price {
  font-family: PingFang-SC-Heavy;
  font-size: 40rpx;
  color: #fd3c4f;
  vertical-align: middle;
}
.detail-main .shopcar {
  float: right;
  width:42rpx;
  height: 38rpx;
}

/* 提示 */
.nomore {
  width: 100%;
  padding: 37rpx 0;
  background-color: #fff;
  /* background-color: #020101; */
  color: #999;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}
.nomore .line {
  width: 90rpx;
  height: 2rpx;
  background-color: #ccc;
}
.nomore .no-text {
  margin: 0 20rpx;
}