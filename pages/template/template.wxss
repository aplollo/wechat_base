/* list */
.order-list {
  width: 100%;
  background-color: #fff;
}
.order-list .list-title {
  width: 100%;
  height: 140rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
  align-items: flex-start;
  position: relative;
}
.list-title .reason {
  width: 90%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.order-list .status {
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 24rpx;
}

.order-list .list-item {
  width: 702rpx;
	height: 196rpx;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 34rpx 24rpx;
	background-color: #f5f5f5;
	border-radius: 4rpx;
}
.list-box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.list-item .item-photo {
  width: 128rpx;
	height: 128rpx;
  margin-right: 20rpx;
}
.list-item .item-content {
  flex: 1;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: flex-start;
  color: #999999;
}
.item-content .price-num {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  color: #fd3c4f;
}
.list-btn {
  width: 100%;
  height: 120rpx;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.list-btn .btn-color {
  border: 1px solid #fd3c4f;
}