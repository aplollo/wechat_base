.pay {
  width: 100%;
  height: 100%;
}
.pay .address {
  width: 100%;
  padding: 30rpx 24rpx 10rpx;
  box-sizing: border-box;
	background-color: #ffffff;
  box-shadow: inset 0px 1px 0px 0px #ededed;
}
.address .receive-list {
  width: 100%;
  height: 100%;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  align-items: flex-start;
}
.receive-title {
  padding-bottom: 10rpx;
}
.receive-title .name {
  margin-right: 100rpx;
}
.receive-address {
  flex: 1;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
}
.receive-address .address-content {
  width: 80%;
}
.receive-address .right-icon {
  width: 20rpx;
  height: 24rpx;
}
.right-icon image {
  width: 100%;
  height: 100%;
}

.colorful-line {
  width: 100%;
  height: 10rpx;
}
.pay .store {
  width: 100%;
  height: 280rpx;
  padding: 40rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  box-shadow: inset 0px -1px 0px 0px #ededed;
}
.store .product-img {
  width: 180rpx;
	height: 180rpx;
  margin-right: 24rpx;
}
.store .product-detail {
  height: 100%;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: flex-start;
}
.product-cost {
  width: 100%;
  font-size: 36rpx;
  color: #fd3c4f;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.product-cost .num {
  color: #999
}

/* cost */
.charge {
  width: 100%;
  height: 188rpx;
  padding: 34rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: row-reverse wrap;
  justify-content: flex-start;
  align-items: flex-start;
  font-size: 28rpx;
  box-shadow: inset 0px -1px 0px 0px #ededed;
}
.charge .cg-item {
  height: 100%;
  margin-left: 64rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #999;
}
.cg-item .cg-box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  white-space: nowrap;
  overflow: hidden;
}
.cg-box .cg-add {
  margin-right: 30rpx
}
.cg-box .cg-price {
  color: #fd3c4f;
}
/* 采购是由 */
.reason {
  width: 100%;
  height: 133rpx;
  padding: 36rpx 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
}
.reason .reason-text {
  margin-right: 150rpx;
}
.reason .reason-area {
  flex: 1;
  height: 100%;
}
.line {
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}
/* 支付按钮 */
.pay-box {
  padding: 54rpx 35rpx 0;
}
.pay-choose {
  width: 100%;
  color: #999;
  text-align: center;
}
.payway {
  color: #fd3c4f;
}
.confirm {
  margin: 38rpx 0;
  width: 680rpx;
	height: 96rpx;
	line-height: 96rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
	background-color: #fd3c4f;
	border-radius: 10rpx;
}