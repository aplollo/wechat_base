/* main */
.main {
  width: 100%;
}
.main-item {
  width: 100%;
	height: 120rpx;
	background-color: #ffffff;
	box-shadow: inset 0px -1px 0px 0px #ededed;
  display: flex;
  flex-flow: row nowrap;
  justify-content: flex-start;
  align-items: center;
}
.main-item .logo {
  width: 60rpx;
	height: 70rpx;
  margin-left: 40rpx;
  margin-right: 56rpx;
}
.main-item .approve {
  font-family: PingFang-SC-Medium;
	font-size: 32rpx;
}

/* button */
.button {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  bottom: 360rpx;
  width: 600rpx;
	height: 98rpx;
	line-height: 98rpx;
  text-align: center;
  color: #fff;
	background-color: #fd3c4f;
	border-radius: 49rpx;
}