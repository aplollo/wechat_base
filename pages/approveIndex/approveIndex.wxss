.index {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}
.title {
	width: 100%;
	height: 300rpx;
	background-color: #fd3c4f;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
  color: #fff;
}
.title .protrait {
  width: 143rpx;
	height: 143rpx;
  margin-left: 42rpx;
  margin-right: 42rpx;
  border-radius: 50%;
  border:1rpx solid #fff;
}
.title .userinfo {
  flex: 1;
  height: 143rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
}
.userinfo .userphone {
  font-size: 36rpx;
}
.userinfo .userbalance {
  display: flex;
}
.userbalance .text {
