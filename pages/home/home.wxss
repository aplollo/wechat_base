.home {
  width: 100%;
  height: 100%;
}
.home-son {
  height: 100%
}
/* 搜索框 */
.searchBar {
  width: 702rpx;
  height: 64rpx;
  line-height: 64rpx;
  margin: 0 auto;
  margin-top: 30rpx;
	border-radius: 32rpx;
  font-size: 28rpx;
  text-align: center;
	background-color: #f5f5f5;
  position: relative;
}
.searchBar .searchImg {
  position: absolute;
  left: 54rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 30rpx;
  height: 30rpx;
  z-index: 99;
}
/* 分类栏 */
.tabBar {
  display: flex;
  flex-flow: wrap;
  text-align: center;
  margin-bottom: 30rpx;
}
.tabBar .tab-content {
  width: 25%;
  text-align: center;
  margin-top: 50rpx;
}
.tab-content image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.tab-content text {
  display: block;
  font-size: 24rpx;
}
/* 轮播图 */
.swipe {
  width: 100%;
  height: 280rpx;
}
.swipe image {
  width: 100%;
  height: 100%;
}

.line {
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}
/* 精选商品 */
.move {
  width: 100%;
  /* height: 100rpx; */
  background-color: #ffffff;
}
.moveTop {
  position: fixed;
  top: 0px;
  left: 0px;
  z-index: 999;
  background-color: #ffffff;
}
.nice-product {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
	background-color: #ffffff;
	box-shadow: inset 0px -1px 0px 0px #ededed;
  font-family: PingFang-SC-Medium;
	font-size: 32rpx;
	color: #fd3c4f;
}
.nice-product image {
  width: 140rpx;
  height: 2rpx;
  vertical-align: middle;
}
.nice-product text {
  padding: 0 15rpx;
  vertical-align: middle;
}
/* 供应商tab栏 */
.supplier {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  padding: 10rpx;
  box-sizing: border-box;
  position: relative;
}
.supplier .supplier-item {
  height: 54rpx;
  line-height: 54rpx;
  font-size: 28rpx;
  color: #999;
  margin-top: 14rpx;
  margin-right: 20rpx;
  padding: 7rpx 20rpx;
  background-color: #fff;
  border-radius: 40rpx;
}
.supplier .supplier-select {
  height: 54rpx;
  line-height: 54rpx;
  font-size: 28rpx;
  color: #ffffff;
  margin-top: 14rpx;
  margin-right: 30rpx;
  padding: 7rpx 20rpx;
  background-color: #fd3c4f;
  border-radius: 40rpx;
}
/* 商品展示 */
.showList {
  width: 100%;
}
.showList .list-item {
  width: 100%;
  height: 312rpx;
  box-sizing: border-box;
  padding: 40rpx 24rpx 40rpx 277rpx;
  position: relative;
  border-bottom: 1rpx solid #ededed;
}
.list-item .productImg {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 232rpx;
	height: 232rpx;
}
.list-item .detail {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
}
.detail .detail-main {
  width: 100%;
}
.detail-main .supply {
  display: inline-block;
  /* width: 68rpx; */
	height: 34rpx;
	line-height: 34rpx;
  margin-right: 22rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
	background-color: #fd3c4f;
  vertical-align: middle;
}
.detail-main .price {
  font-family: PingFang-SC-Heavy;
  font-size: 40rpx;
  color: #fd3c4f;
  vertical-align: middle;
}
.detail-main .shopcar {
  float: right;
  width:42rpx;
  height: 38rpx;
}
.list-status {
  width: 100%;
  padding: 10rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}
/* 供应商tab */
.mt280 {
  margin-top: 280rpx;
}