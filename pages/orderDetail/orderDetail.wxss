.orderDetail {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}
.order-progress {
  width: 100%;
  height: 184rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
  background-color: #fff;
  box-shadow: inset 0px 1rpx 0px #ededed;
}
.progress-start {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.progress-img {
  width: 200rpx;
	height: 15rpx;
}
.progress-end {
  width: 100%;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}

.name {
  font-size: 30rpx;
  color: #fd3c4f;
}
.time {
  width:100rpx;
  height: 30rpx;
  font-size: 24rpx;
  color: #fd3c4f;
}
.order-main {
  width: 100%;
}
.isRevoke {
  margin-bottom: 98rpx;
}
/* order-content */
.order-list {
  width: 100%;
  padding: 24rpx 0;
  box-sizing: border-box;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
  background-color: #fff;
  box-shadow: inset 0px 1rpx 0px #ededed;
}
.order-item {
  height: 50rpx;
  display: flex;
}
.title {
  width: 180rpx;
  color: #999999;
  text-align: right;
}
.order-item .detail {
  width:520rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

/* stage */
.approve-detail {
  width: 100%;
  margin-bottom: 138rpx;
  background-color: #fff;
}
.approve-detail .detail-title {
  width: 100%;
  height: 96rpx;
  padding: 0 42rpx;
  box-sizing: border-box;
  font-size: 32rpx;
	background-color: #ffffff;
	box-shadow: inset 0px -1rpx 0px 0px #ededed;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.detail-title .arrow {
  width: 40rpx;
  height: 40rpx;
}
.approve-detail .detail-shop {
  width: 702rpx;
	height: 196rpx;
  padding: 0 24rpx;
  margin: 30rpx auto 40rpx;
  box-sizing: border-box;
	background-color: #f5f5f5;
	border-radius: 4rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.detail-shop .shop-img {
  width: 128rpx;
	height: 128rpx;
  margin-right: 20rpx;
}
.detail-shop .shop-main {
  flex: 1;
  height: 128rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
  /* align-items:  */
}
.shop-main .shop-price {
  display: flex;
  justify-content: space-between;
  color: #fd3c4f;
}
.revoke {
  position: fixed;
  left:0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 36rpx;
  color: #fff;
  background-color: #fd3c4f;
}