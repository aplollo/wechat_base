.approve {
  width: 100%;
  background-color: #f5f5f5
}
.approve .title {
  width: 100%;
  height: 120rpx;
  background-color: #fff;
  border-top: 1rpx solid #ededed;
  /* box-shadow: inset 0px -1px 0px 0px #ededed; */
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}
.tab-left,.tab-right {
  width: 200rpx;
	height: 70rpx;
	line-height: 70rpx;
  text-align: center;
	border: solid 1px #fd3c4f;
  color: #999;
  font-size: 32rpx;
}
.tab-left {
	border-radius: 35px 0px 0px 35px;
}
.tab-right {
	border-radius: 0px 35px 35px 0px;
}
.tab-select {
  background-color: #fd3c4f;
  color: #fff;
}
/* list */
.main {
  width: 100%;
  margin-bottom: 98rpx;
}
.list-item {
  width: 100%;
  box-sizing: border-box;
  padding: 0 24rpx;
  background-color: #fff;
}
.main-title {
  width: 100%;
  height: 140rpx;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.cg-content {
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-around;
}
.cg-content view {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cg-status {
  width: 100rpx;
	height: 44rpx;
	line-height: 44rpx;
  text-align: center;
	border-radius: 8rpx;
	border: 1rpx solid #999999;
  font-size: 24rpx;
  color: #999;
}
.main-product {
  width: 100%;
	height: 196rpx;
  padding: 34rpx 24rpx;
  box-sizing: border-box;
	background-color: #f5f5f5;
	border-radius: 4rpx;
  display: flex;
}
.product-photo {
  width: 128rpx;
	height: 128rpx;
  margin-right: 20rpx;
}
.product-content {
  flex: 1;
  display: flex;
  flex-flow: column nowrap;
  justify-content: space-between;
}
.product-content .product-name {
  color: #999;
  background-color: #f5f5f5;
}
.product-content .price {
  display: flex;
  justify-content: space-between;
  color: #fd3c4f;
}
/* select */
.total {
  width: 100%;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  flex-flow: row-reverse nowrap;
  justify-content: space-between;
  align-items: center;
}
.select {
  width: 49rpx;
	height: 49rpx;
	border: 1rpx solid #999999;
  border-radius: 50%;
}
.select image {
  width: 100%;
  height: 100%;
}
.total .supplyPrice {
  color: #fd3c4f;
}
.select-in {
  border: none;
}
/* button */
.fix-button {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 96rpx;
  display: flex;
  align-items: center;
}
.fix-button .other {
  flex: 1;
  height: 96rpx;
  background-color: #fff;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}
.fix-button .select {
  width: 49rpx;
	height: 49rpx;
	border: 1rpx solid #999999;
  border-radius: 50%;
  margin-left: 24rpx;
}
.select image {
  width: 100%;
  height: 100%;
}
.fix-button .select-in {
  border: none;
}
.fix-button .refuse ,.fix-button .pass{
  width: 230rpx;
  text-align: center;
  line-height: 96rpx;
  color: #fff;
  font-size: 32rpx;
}
.fix-button .refuse {
  background-color: #6ab1e8;
}
.fix-button .pass {
  background-color: #64cc95;
}