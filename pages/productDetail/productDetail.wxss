@import "/wxParse/wxParse.wxss";
.productDetail {
  width: 100%;
  height: 100%;
  background-color: #f5f5f5;
}
/* banner图 */
.banner {
  width: 100%;
  height: 700rpx;
}
.banner image {
  width: 100%;
  height: 100%;
}

/* content */
.content {
  width: 100%;
  box-sizing: border-box;
  padding: 27rpx 24rpx;
  background-color: #fff;
}
.content .title {
  width: 100%;
  box-sizing: border-box;
  padding-right: 42rpx;
  padding-bottom: 10rpx;
}
.title .supply {
  font-size: 24rpx;
  padding: 6rpx 11rpx;
  margin-right: 10rpx;
  background-color: #fd3c4f;
  color: #fff;
}
.title .title-content {
  font-size: 30rpx;
}
.content .productDetail {
  width: 100%;
  box-sizing: border-box;
  text-align: left;
  position: relative;
  font-size: 28rpx;
  color: #999;
  background-color: #fff;
}
.productDetail .sale {
  margin-bottom: 10rpx;
  line-height: 40rpx;
}
.sale .price {
  font-size: 39rpx;
  color: #fd3c4f;
}
.sale .saleNum{
  float: right;
}

/* 商品介绍 */
.productIntroduce {
  margin-top: 21rpx;
  background-color: #fff;
  margin-bottom: 110rpx;
}
.productIntroduce .introduce {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333;
  box-shadow: inset 0px -1rpx 0px 0px #ededed;
}
.productIntroduce .detail {
  padding-top: 20rpx;
  text-align: center;
  width: 100%;
}
.productIntroduce .detail .wxParse-div{
  width: inherit !important;
}
.productIntroduce .detail .wxParse-img{
  width: inherit !important;
  /* height: inherit !important; */
}
/* .productIntroduce .detail .details div img {
  width: 100%;
} */
/* 购物栏 */
.shop-buttons {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 106rpx;
  display: flex;
  flex-direction: row;
}
.shopcar {
  flex: 1;
  font-size: 24rpx;
  background-color: #fff;
  box-shadow: inset 0px 1px 0px 0px #e5e5e5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.shopcar .shopIcon {
  margin-top: 10rpx;
  width: 38rpx;
  height: 34rpx;
}
.shopadd, .shopnow{
  flex: 1;
  color: #fff;
  font-size: 36rpx;
  line-height: 106rpx;
  text-align: center;
}
.shopadd {
  background-color: #fdae3c;
}
.shopnow {
  background-color: #fd3c4f;
}

/* 模态框 */
.model-shadow {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}
.model-box {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 64rpx 24rpx 0;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.model-cancel {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  width: 45rpx;
  height: 45rpx;
  border-radius: 50%;
}
.model-cancel image {
  width: 100%;
  height: 100%;
}
.model-product {
  width: 100%;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #e5e5e5;
  overflow: hidden; 
}
.model-img {
  float: left;
  width: 200rpx;
  height: 200rpx;
}
.model-content {
  float: right;
  width: 450rpx;
}
.model-price {
  color: #fd3c4f;
}
.model-address text {
  color: skyblue;
}
.model-shopbtn .add-btn, .model-shopbtn .reduce-btn{
  width: 50rpx;
	height: 52rpx;
	line-height: 52rpx;
  text-align: center;
  display: inline-block;
  vertical-align: middle;
	border: 1rpx solid #cccccc;
	background-color: #ededed;
  box-sizing: border-box;
  color: #999999;
}
.model-shopbtn .num {
  width: 70rpx;
	height: 52rpx;
	line-height: 52rpx;
  text-align: center;
  display: inline-block;
  box-sizing: border-box;
	border-top: 1rpx solid #cccccc;
	border-bottom: 1rpx solid #cccccc;
  vertical-align: middle;
}

.model-button {
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  margin: 28rpx auto;
  text-align: center;
  border-radius: 50rpx;
  color: #fff;
  font-size: 39rpx;
  background: linear-gradient(to right, #ffa500, #fe5344); 
}