.productList {
  width: 100%;
  height: 100%;
}
/* 商品列表 */
.showList {
  width: 100%;
  border-top: 1rpx solid #ededed;
}
.showList .list-item {
  width: 100%;
  height: 312rpx;
  box-sizing: border-box;
  padding: 40rpx 24rpx 40rpx 277rpx;
  position: relative;
  border-bottom: 1rpx solid #ededed;
}
.list-item .productImg {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 232rpx;
	height: 232rpx;
}
.list-item .detail {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
}
.detail .detail-main {
  width: 100%;
}
.detail-main .supply {
  display: inline-block;
  /* width: 68rpx; */
	height: 34rpx;
	line-height: 34rpx;
  margin-right: 22rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
	background-color: #fd3c4f;
  vertical-align: middle;
}
.detail-main .price {
  font-family: PingFang-SC-Heavy;
  font-size: 40rpx;
  color: #fd3c4f;
  vertical-align: middle;
}
.detail-main .shopcar {
  float: right;
  width:42rpx;
  height: 38rpx;
}
.showList .list-status {
  width: 100%;
  padding: 10rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
}