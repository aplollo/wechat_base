.supplier {
  width: 100%;
  height: 100%;
  padding-top: 100rpx;
  background-color: #f5f5f5
}
/* 商品滑动选择 */
.scroll_box{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100rpx;
  padding: 20rpx 140rpx 20rpx 20rpx;
  box-sizing: border-box;
  background: #f5f5f5;
  white-space: nowrap;
  overflow: hidden;
  z-index: 999;
}
.scroll_box .xxx {
  height: 100%;
  /* line-height: 60rpx; */
}
.item_list{
  display: inline-block;
  /* height: auto; */
  padding: 7rpx 20rpx;
  margin-right: 10rpx;
  margin-top: 5rpx;
  border-radius: 40rpx;
  color: #999;
  font-size: 28rpx;
  box-sizing: border-box;
  vertical-align: middle;
}

.controll-btn {
  position: absolute;
  right: 0;
  top: 0rpx;
  width: 120rpx;
  height: 100rpx;
  color: #999;
}
.controll-btn view {
  display: inline-block;
  font-size: 28rpx;
  margin-right: 10rpx;
  vertical-align: top;
  line-height: 100rpx;
}
.controll-btn .confirm {
  display: inline-block;
  width: 100rpx;
  font-size: 28rpx;
  text-align: center;
}
.controll-btn .arrow {
  display: inline-block;
  margin-top: 36rpx;
  width: 28rpx;
  height: 28rpx;
}
/* 渠道/商品 选择  */
.supply-select {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.5);
  padding-top: 100rpx;
  z-index: 99;
}
.supply-select .supply-content {
  width: 100%;
  padding: 30rpx 24rpx 30rpx;
  background-color: #fff;
}
.select-title {
  font-size: 28rpx;
  color: #333;
  font-weight: 600;
  padding-bottom: 20rpx;
}
/* 选中样式 */
.select-bg {
  color: #fff;
  background-color: #fd3c4f;
}
.select-color {
  color: #fd3c4f;
}

/* 商品列表 */
.showList {
  width: 100%;
  background-color: #fff;
}
.showList .list-item {
  width: 100%;
  height: 312rpx;
  box-sizing: border-box;
  padding: 40rpx 24rpx 40rpx 277rpx;
  border-bottom: 1rpx solid #ededed;
  position: relative;
}
.list-item .productImg {
  position: absolute;
  left: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 232rpx;
	height: 232rpx;
}
.list-item .detail {
  display: flex;
  height: 100%;
  flex-direction: column;
  justify-content: space-around;
  font-family: PingFang-SC-Medium;
	font-size: 28rpx;
}
.detail .detail-main {
  width: 100%;
}
.detail-main .supply {
  display: inline-block;
  /* width: 68rpx; */
	height: 34rpx;
	line-height: 34rpx;
  margin-right: 22rpx;
  padding: 0 10rpx;
  font-size: 24rpx;
  text-align: center;
  color: #fff;
	background-color: #fd3c4f;
  vertical-align: middle;
}
.detail-main .price {
  font-family: PingFang-SC-Heavy;
  font-size: 40rpx;
  color: #fd3c4f;
  vertical-align: middle;
}
.detail-main .shopcar {
  float: right;
  width:42rpx;
  height: 38rpx;
}

/* 提示 */
.nomore {
  width: 100%;
  padding: 37rpx 0;
  background-color: #f5f5f5;
  color: #999;
  display: flex;
  flex-flow: row nowrap;
  justify-content: center;
  align-items: center;
}
.nomore .line {
  width: 90rpx;
  height: 2rpx;
  background-color: #ccc;
}
.nomore .no-text {
  margin: 0 20rpx;
}

/* loading */
.loading {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  width: 200%;
  height: 100%;
}
.loading .loading-box {
  position: absolute;
  left: 50%;
  top: 46%;
  transform: translate3d(-50%,-50%,0);
  width:200rpx;
  height: 220rpx;
  border-radius: 15rpx;
  background-color: #555555;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}
.loading-box .loading-text {
  margin-top: 20rpx;
  font-size: 32rpx;
  color: #fff;
}
.loading-box .loading-image {
  margin-top: 20rpx;
  width: 40rpx;
  height: 40rpx;
}